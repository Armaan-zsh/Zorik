<Window x:Class="LauncherApp.PDF.PdfChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose PDF App" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Choose an app to open PDF files:" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <ListBox x:Name="AppsList" Grid.Row="1" DisplayMemberPath="Name" Margin="0,0,0,10" KeyboardNavigation.DirectionalNavigation="Cycle" SelectionMode="Single"/>
        
        <CheckBox x:Name="AlwaysCheck" Grid.Row="2" Content="Always use for .pdf files" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkBtn" Content="Open" Width="75" Margin="0,0,10,0" Click="OkBtn_Click" IsDefault="True"/>
            <Button Name="CancelBtn" Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>